@using WebColegioPagos.Models;
@model Admin
@{
    ViewData["Title"] = "Ingreso al sistema de control de pensiones";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebColegioPagos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebColegioPagos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/estilos.css" />
    <style>
        body {
            background-color: rgba(100, 100, 100, 1); /* Gris opaco, puedes ajustar los valores RGBA según tus preferencias */
            color: #ecf0f1; /* Blanco */
            height: 100%;
            background-image: url("");
        }

        #img{
            margin-bottom: 15px
        }

    </style>
</head>
<body>
    <div class="capa"></div>
    <div class="container">
        <main role="main" class="pb-3">
            <h1 class="text-light">@ViewData["Title"]</h1>
            <img src="/img/ceiaflogo.png" class="img-fluid" alt="Logo empresa" id="img">
            <form method="post">
                <div class="mb-3">
                    <label class="text-light">Id</label>
                    <input class="form-control" asp-for="Id">
                </div>
                <div class="mb-3">
                    <label class="text-light">Contraseña</label>
                    <input type="password" class="form-control" asp-for="contrasenia">
                </div>
                <div class="col-6 col-md-6">
                    <button class="btn btn-success">Log In</button>
                </div>

            </form>

        </main>
    </div>
</body>
</html>